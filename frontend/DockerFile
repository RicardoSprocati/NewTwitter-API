FROM node:20-alpine AS build
WORKDIR /usr/src/app
COPY package.json package-lock.json* pnpm-lock.yaml* yarn.lock* ./
RUN npm install
COPY . .
RUN npm run build


FROM node:20-alpine
WORKDIR /usr/src/app
COPY --from=build /usr/src/app/dist ./dist
EXPOSE 5173
CMD ["npx", "serve", "-s", "dist", "-l", "5173"]